<div class="blog-overview">
    <div class="container">
        <div class="row">
            {% set blogs = craft.entries.section('blog').all() %}

            {% for blog in blogs %}
                <div class="col-xs-24 col-sm-12 col-md-8">
                    <a href="{{ blog.url }}" class="blog-item">
                        <div class="blog-item__bg b-lazy" data-src-small="{{ blog.image.one().getUrl('blogThumbnailSmall') }}" data-src="{{ blog.image.one().getUrl('blogThumbnailMedium') }}"></div>
                        <div class="blog-item__content">
                            <h3 class="h6 blog-item__title">{{ blog.title }}</h3>
                            <p class="blog-item__text">
                                {{ blog.intro|striptags|slice(0, 100) }}
                                {{ blog.intro|length > 100 ? '...' : '' }}
                            </p>
                        </div>

                        <span class="blog-item__read-more">
                            {{ base.readMore }}
                            <svg width="32" height="32" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path d="M1171 960q0 13-10 23l-466 466q-10 10-23 10t-23-10l-50-50q-10-10-10-23t10-23l393-393-393-393q-10-10-10-23t10-23l50-50q10-10 23-10t23 10l466 466q10 10 10 23z"/></svg>
                        </span>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>