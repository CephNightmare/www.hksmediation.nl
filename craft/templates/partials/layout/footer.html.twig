<footer class="footer">

    <div class="footer-contact">
        <div class="footer-contact__bg"></div>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xs-24 col-md-20 col-lg-16">

                    <div class="footer-contact__block-wrapper">

                        <div class="footer-contact__info-block">
                            <h3 class="h3 h3--light footer-contact__info-block-title">{{ footerContact.infoTitle }}</h3>

                            <div class="footer-contact__info-row">
                                <div class="footer-contact__info-row-icon">
                                    <svg width="32" height="32" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path d="M1152 640q0-106-75-181t-181-75-181 75-75 181 75 181 181 75 181-75 75-181zm256 0q0 109-33 179l-364 774q-16 33-47.5 52t-67.5 19-67.5-19-46.5-52l-365-774q-33-70-33-179 0-212 150-362t362-150 362 150 150 362z" fill="#fff"/></svg>
                                </div>

                                <div class="footer-contact__info-row-text">{{ footerContact.address }}</div>
                            </div>

                            <div class="footer-contact__info-row">
                                <div class="footer-contact__info-row-icon">
                                    <svg width="32" height="32" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path d="M1792 710v794q0 66-47 113t-113 47h-1472q-66 0-113-47t-47-113v-794q44 49 101 87 362 246 497 345 57 42 92.5 65.5t94.5 48 110 24.5h2q51 0 110-24.5t94.5-48 92.5-65.5q170-123 498-345 57-39 100-87zm0-294q0 79-49 151t-122 123q-376 261-468 325-10 7-42.5 30.5t-54 38-52 32.5-57.5 27-50 9h-2q-23 0-50-9t-57.5-27-52-32.5-54-38-42.5-30.5q-91-64-262-182.5t-205-142.5q-62-42-117-115.5t-55-136.5q0-78 41.5-130t118.5-52h1472q65 0 112.5 47t47.5 113z" fill="#fff"/></svg>
                                </div>
                                <div class="footer-contact__info-row-text">
                                    <a href="mailto:{{ footerContact.email }}" class="footer-contact__info-link">{{ footerContact.emailTitle }}</a>
                                </div>
                            </div>

                            <div class="footer-contact__info-row">
                                <div class="footer-contact__info-row-icon">
                                    <svg width="32" height="32" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path d="M1600 1240q0 27-10 70.5t-21 68.5q-21 50-122 106-94 51-186 51-27 0-53-3.5t-57.5-12.5-47-14.5-55.5-20.5-49-18q-98-35-175-83-127-79-264-216t-216-264q-48-77-83-175-3-9-18-49t-20.5-55.5-14.5-47-12.5-57.5-3.5-53q0-92 51-186 56-101 106-122 25-11 68.5-21t70.5-10q14 0 21 3 18 6 53 76 11 19 30 54t35 63.5 31 53.5q3 4 17.5 25t21.5 35.5 7 28.5q0 20-28.5 50t-62 55-62 53-28.5 46q0 9 5 22.5t8.5 20.5 14 24 11.5 19q76 137 174 235t235 174q2 1 19 11.5t24 14 20.5 8.5 22.5 5q18 0 46-28.5t53-62 55-62 50-28.5q14 0 28.5 7t35.5 21.5 25 17.5q25 15 53.5 31t63.5 35 54 30q70 35 76 53 3 7 3 21z" fill="#fff"/></svg>                                </div>
                                <div class="footer-contact__info-row-text">
                                    <a href="mailto:{{ footerContact.phonenumber }}" class="footer-contact__info-link">{{ footerContact.phonenumberTitle }}</a>
                                </div>
                            </div>
                        </div>

                        <div class="footer-contact__form-block">
                            <h3 class="h3 h3--light footer-contact__form-block-title">Neem contact op</h3>
                            <p class="footer-contact__form-block-text">We komen snel met een reactie</p>

                            {% macro errorList(errors) %}
                                {% if errors %}
                                    <ul class="errors">
                                        {% for error in errors %}
                                            <li>{{ error }}</li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            {% endmacro %}

                            {% from _self import errorList %}

                            <form class="form" method="post" action="" accept-charset="UTF-8">
                                {{ csrfInput() }}

                                <input type="hidden" name="action" value="contact-form/send">

                                <div class="form__row">
                                    <input id="from-name" placeholder="Uw naam" type="text" name="fromName" value="{{ message.fromName ?? '' }}">
                                    {{ message is defined and message ? errorList(message.getErrors('fromName')) }}
                                </div>

                                <div class="form__row">
                                    <input id="from-email" placeholder="Uw Emailadres" type="text" name="fromEmail" value="{{ message.fromEmail ?? '' }}">
                                    {{ message is defined and message ? errorList(message.getErrors('fromEmail')) }}
                                </div>

                                <div class="form__row">
                                    <textarea rows="4" placeholder="Uw bericht" cols="40" id="message" name="message">{{ message.message ?? '' }}</textarea>
                                    {{ message is defined and message ? errorList(message.getErrors('message')) }}
                                </div>

                                <button type="submit" class="form__button button">Verstuur</button>
                            </form>

                        </div>

                    </div>

                </div>
            </div>
        </div>

    </div>

    <div class="footer-main">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-xs-24 col-sm-10 col-md-6">
                    <a href="/" class="footer-main__logo"><img class="b-lazy" data-src="/public/images/logo.png" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" alt=""></a>
                    <p class="footer-main__text">{{ footerMain.logoText }}</p>
                </div>

                <div class="col-xs-24 col-sm-10 col-md-6">
                    <h6 class="h6 h6--bold footer-main__title">{{ footerMain.menuTitle }}</h6>
                </div>

                <div class="col-xs-24 col-md-6">
                    <h6 class="h6 h6--bold footer-main__title">{{ footerMain.contactTitle }}</h6>

                    <p class="footer-main__text">
                        {{ footerMain.contactText }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <span class="footer-bottom__made-by">Gerealiseerd door <a class="footer-bottom__link" href="mailto:geert_van_drunen@live.nl">Geert van Drunen</a></span>
    </div>

</footer>